		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="actions\timer\property_inspector\property_inspector.html">
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<!-- Images that must be deployed with the executable -->
	<ItemGroup>
		<Content Include="README.md">
		</Content>
	</ItemGroup>

	<!-- Post build scripts that must not be deployed with the executable -->
	<ItemGroup>
	  <None Remove="Stopwatch\" />
	  <None Remove="Stopwatch\property_inspector\css\property-inspector.css" />
	  <None Remove="Stopwatch\property_inspector\css\sdpi.css" />
	  <None Remove="Stopwatch\property_inspector\js\property-inspector.js" />
	  <None Remove="Stopwatch\property_inspector\property_inspector.html" />
	  <None Remove="actions\" />
	  <None Remove="actions\Stopwatch\images\actionDefaultImage.png" />
	  <None Remove="actions\Stopwatch\images\actionDefaultImage%402x.png" />
	  <None Remove="actions\Stopwatch\images\actionIcon.png" />
	  <None Remove="actions\Stopwatch\images\actionIcon%402x.png" />
	  <None Remove="actions\Stopwatch\images\pluginIcon.png" />
