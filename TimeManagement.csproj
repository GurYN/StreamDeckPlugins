	  <None Remove="actions\timer\images\" />
	  <None Remove="actions\timer\property_inspector\" />
	  <None Remove="actions\stopwatch\property_inspector\css\property-inspector.css" />
	  <None Remove="actions\stopwatch\property_inspector\css\sdpi.css" />
	  <None Remove="actions\stopwatch\property_inspector\js\property-inspector.js" />
	  <None Remove="actions\stopwatch\property_inspector\property_inspector.html" />
	  <None Remove="actions\timer\property_inspector\css\property-inspector.css" />
	  <None Remove="actions\timer\property_inspector\css\sdpi.css" />
	  <None Remove="actions\timer\property_inspector\js\property-inspector.js" />
	  <None Remove="actions\timer\property_inspector\property_inspector.html" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="actions\stopwatch\" />
	  <Folder Include="actions\" />
	  <Folder Include="actions\timer\" />
	  <Folder Include="actions\timer\models\" />
	  <Folder Include="actions\timer\images\" />
	  <Folder Include="actions\timer\property_inspector\" />
	</ItemGroup>
	<ItemGroup>
	  <None Update="actions\stopwatch\property_inspector\css\property-inspector.css">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="actions\stopwatch\property_inspector\css\sdpi.css">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="actions\timer\property_inspector\property_inspector.html">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="actions\timer\property_inspector\js\property-inspector.js">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="actions\timer\property_inspector\css\property-inspector.css">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="actions\timer\property_inspector\css\sdpi.css">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
